<!DOCTYPE html>
<html>
	<head>
	  <title>EleganceRestaurant</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-light bg-faded">
		  <a class="navbar-brand" href="<%= root_path %>">Elegance Restaurant</a>
		  <ul class="nav navbar-nav">
		    <li class="nav-item active">
		      <a class="nav-link" href="<%= menu_path %>">Menu <span class="sr-only">(current)</span></a>
		    </li>
		    <li class="nav-item">
		      <a class="nav-link" href="<%= contact_path %>">Contact us</a>
		    </li>
		  </ul>
		</nav>
		<div class="container">
		  <%= yield %>
		</div>
	</body>
</html>
